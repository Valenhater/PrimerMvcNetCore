@model List<int>


<h1>Conjetura collatz</h1>

<form method="post">
    <label>Introduce un número</label>
    <input type="text" name="numero" class="form-control" />
    <button class="btn btn-success">Conjetura Collatz</button>
</form>
<hr />

@if(Model != null)
{
    <ul>
        @foreach (int num in Model)
        {
            <li>@num</li>
        }
    </ul>
}

